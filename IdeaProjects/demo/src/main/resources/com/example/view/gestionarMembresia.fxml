<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.controller.GestionarMembresiaController"
            prefWidth="800.0"
            prefHeight="700.0"
            style="-fx-background-color: #f5f5f5;">

    <top>
        <VBox style="-fx-background-color: white; -fx-padding: 15px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 3, 0, 0, 3);">
            <Label text="Selección de Plan de Membresía" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
            <Label text="Elija el plan que mejor se adapte a sus necesidades" style="-fx-text-fill: #7f8c8d;"/>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox spacing="20" style="-fx-padding: 20px;">
                <!-- Información del cliente y vehículo -->
                <VBox style="-fx-background-color: white; -fx-padding: 15px; -fx-background-radius: 5px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 5);">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Información del Cliente y Vehículo" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="lblEstadoMembresia" text="Sin membresía activa"
                               style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 5px 10px; -fx-background-radius: 3px;"/>
                    </HBox>

                    <GridPane hgap="15" vgap="10" style="-fx-padding: 10px 0;">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="120" />
                            <ColumnConstraints hgrow="ALWAYS" minWidth="150" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="120" />
                            <ColumnConstraints hgrow="ALWAYS" minWidth="150" />
                        </columnConstraints>

                        <!-- Información del cliente -->
                        <Label text="Cliente:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                        <Label fx:id="lblNombreCliente" text="Juan Pérez" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Cédula:" GridPane.rowIndex="0" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
                        <Label fx:id="lblCedulaCliente" text="1234567890" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                        <Label text="Teléfono:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                        <Label fx:id="lblTelefonoCliente" text="555-123-4567" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Correo:" GridPane.rowIndex="1" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
                        <Label fx:id="lblCorreoCliente" text="juan.perez@email.com" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                        <!-- Separador -->
                        <Separator GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="4"
                                   style="-fx-padding: 5px 0;"/>

                        <!-- Información del vehículo -->
                        <Label text="Placa:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                        <Label fx:id="lblPlaca" text="ABC123" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Tipo:" GridPane.rowIndex="3" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
                        <Label fx:id="lblTipo" text="Automóvil" GridPane.rowIndex="3" GridPane.columnIndex="3"/>

                        <Label text="Modelo:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                        <Label fx:id="lblModelo" text="2023" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                        <Label text="Color:" GridPane.rowIndex="4" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
                        <Label fx:id="lblColor" text="Rojo" GridPane.rowIndex="4" GridPane.columnIndex="3"/>
                    </GridPane>
                </VBox>

                <!-- Tarjetas de planes de membresía -->
                <Label text="Seleccione su Plan de Membresía" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                <HBox spacing="20" alignment="CENTER">
                    <!-- Plan de 1 Mes -->
                    <VBox fx:id="tarjeta1Mes" styleClass="tarjeta-plan"
                          style="-fx-background-color: white; -fx-padding: 15px; -fx-background-radius: 5px; -fx-border-color: #e0e0e0; -fx-border-width: 1px; -fx-border-radius: 5px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 3, 0, 0, 3); -fx-pref-width: 220px; -fx-alignment: center;"
                          onMouseClicked="#seleccionarPlan1Mes">
                        <Label text="Plan Básico" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #3498db;"/>
                        <Label text="1 Mes" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>

                        <Rectangle width="50" height="2" fill="#3498db" style="-fx-margin: 10px 0;"/>

                        <Label fx:id="lblPrecio1Mes" text="100,000" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-padding: 10px 0;"/>

                        <VBox spacing="8" alignment="CENTER_LEFT" style="-fx-padding: 10px 0;">
                            <Label text="✓ Acceso 24/7" style="-fx-text-fill: #2c3e50;"/>
                            <Label text="✓ Espacio garantizado" style="-fx-text-fill: #2c3e50;"/>
                            <Label text="✓ Tarifa estándar" style="-fx-text-fill: #2c3e50;"/>
                        </VBox>

                        <Region VBox.vgrow="ALWAYS" />

                        <RadioButton fx:id="rbPlan1Mes" text="Seleccionar" toggleGroup="$grupoPlanes"/>
                    </VBox>

                    <!-- Plan de 3 Meses -->
                    <VBox fx:id="tarjeta3Meses" styleClass="tarjeta-plan"
                          style="-fx-background-color: white; -fx-padding: 15px; -fx-background-radius: 5px; -fx-border-color: #f39c12; -fx-border-width: 2px; -fx-border-radius: 5px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 5); -fx-pref-width: 220px; -fx-alignment: center;"
                          onMouseClicked="#seleccionarPlan3Meses">
                        <Label text="Plan Estándar" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #f39c12;"/>
                        <Label text="3 Meses" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>

                        <Rectangle width="50" height="2" fill="#f39c12" style="-fx-margin: 10px 0;"/>

                        <HBox alignment="CENTER">
                            <Label fx:id="lblPrecio3Meses" text="285,000" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-padding: 10px 0;"/>
                            <Label text="5% desc." style="-fx-font-size: 12px; -fx-text-fill: #27ae60; -fx-padding: 0 0 0 5px;"/>
                        </HBox>

                        <VBox spacing="8" alignment="CENTER_LEFT" style="-fx-padding: 10px 0;">
                            <Label text="✓ Acceso 24/7" style="-fx-text-fill: #2c3e50;"/>
                            <Label text="✓ Espacio garantizado" style="-fx-text-fill: #2c3e50;"/>
                            <Label text="✓ 5% de descuento" style="-fx-text-fill: #2c3e50;"/>
                            <Label text="✓ Servicio prioritario" style="-fx-text-fill: #2c3e50;"/>
                        </VBox>

                        <Region VBox.vgrow="ALWAYS" />

                        <RadioButton fx:id="rbPlan3Meses" text="Seleccionar" toggleGroup="$grupoPlanes" selected="true"/>
                    </VBox>

                    <!-- Plan de 1 Año -->
                    <VBox fx:id="tarjeta1Anio" styleClass="tarjeta-plan"
                          style="-fx-background-color: white; -fx-padding: 15px; -fx-background-radius: 5px; -fx-border-color: #e0e0e0; -fx-border-width: 1px; -fx-border-radius: 5px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 3, 0, 0, 3); -fx-pref-width: 220px; -fx-alignment: center;"
                          onMouseClicked="#seleccionarPlan1Anio">
                        <Label text="Plan Premium" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #9b59b6;"/>
                        <Label text="1 Año" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>

                        <Rectangle width="50" height="2" fill="#9b59b6" style="-fx-margin: 10px 0;"/>

                        <HBox alignment="CENTER">
                            <Label fx:id="lblPrecio1Anio" text="1,020,000" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-padding: 10px 0;"/>
                            <Label text="15% desc." style="-fx-font-size: 12px; -fx-text-fill: #27ae60; -fx-padding: 0 0 0 5px;"/>
                        </HBox>

                        <VBox spacing="8" alignment="CENTER_LEFT" style="-fx-padding: 10px 0;">
                            <Label text="✓ Acceso 24/7" style="-fx-text-fill: #2c3e50;"/>
                            <Label text="✓ Espacio garantizado" style="-fx-text-fill: #2c3e50;"/>
                            <Label text="✓ 15% de descuento" style="-fx-text-fill: #2c3e50;"/>
                            <Label text="✓ Servicio prioritario" style="-fx-text-fill: #2c3e50;"/>
                            <Label text="✓ Lavado mensual gratis" style="-fx-text-fill: #2c3e50;"/>
                        </VBox>

                        <Region VBox.vgrow="ALWAYS" />

                        <RadioButton fx:id="rbPlan1Anio" text="Seleccionar" toggleGroup="$grupoPlanes"/>
                    </VBox>
                </HBox>

                <!-- Resumen del plan seleccionado -->
                <VBox style="-fx-background-color: #f8f9fa; -fx-padding: 15px; -fx-background-radius: 5px; -fx-border-color: #e9ecef; -fx-border-width: 1px; -fx-border-radius: 5px;">
                    <Label text="Resumen del Plan Seleccionado" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                    <GridPane hgap="15" vgap="10" style="-fx-padding: 10px 0;">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                            <ColumnConstraints hgrow="ALWAYS" minWidth="200" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                            <ColumnConstraints hgrow="ALWAYS" minWidth="200" />
                        </columnConstraints>

                        <Label text="Plan:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                        <Label fx:id="lblPlanSeleccionado" text="Plan Estándar (3 Meses)" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Fecha Inicio:" GridPane.rowIndex="0" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
                        <DatePicker fx:id="dpFechaInicio" GridPane.rowIndex="0" GridPane.columnIndex="3" maxWidth="Infinity"/>

                        <Label text="Fecha Fin:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                        <Label fx:id="lblFechaFin" text="31/12/2025" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Precio Base:" GridPane.rowIndex="1" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
                        <Label fx:id="lblPrecioBase" text="300,000" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                        <Label text="Descuento:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                        <Label fx:id="lblDescuento" text="15,000 (5%)" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Total a Pagar:" GridPane.rowIndex="2" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
                        <Label fx:id="lblTotalPagar" text="285,000" style="-fx-font-weight: bold; -fx-font-size: 14px;"
                               GridPane.rowIndex="2" GridPane.columnIndex="3"/>
                    </GridPane>
                </VBox>

                <!-- Información de pago -->
                <VBox style="-fx-background-color: white; -fx-padding: 15px; -fx-background-radius: 5px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 5);">
                    <Label text="Información de Pago" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                    <VBox spacing="15" style="-fx-padding: 15px 0;">
                        <Label text="Método de Pago:" style="-fx-font-weight: bold;"/>

                        <HBox spacing="20" alignment="CENTER_LEFT">
                            <RadioButton fx:id="rbEfectivo" text="Efectivo" toggleGroup="$grupoMetodoPago" selected="true"/>
                            <RadioButton fx:id="rbTarjeta" text="Tarjeta de Crédito/Débito" toggleGroup="$grupoMetodoPago"/>
                            <RadioButton fx:id="rbTransferencia" text="Transferencia Bancaria" toggleGroup="$grupoMetodoPago"/>
                        </HBox>

                        <VBox fx:id="panelDatosPago" spacing="10">
                            <GridPane hgap="15" vgap="15">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                                    <ColumnConstraints hgrow="ALWAYS" minWidth="200" />
                                </columnConstraints>

                                <Label text="Referencia de Pago:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                                <TextField fx:id="txtReferenciaPago" promptText="Ingrese número de referencia"
                                           GridPane.rowIndex="0" GridPane.columnIndex="1" />

                                <Label text="Observaciones:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                                <TextArea fx:id="txtObservaciones" promptText="Ingrese observaciones adicionales"
                                          GridPane.rowIndex="1" GridPane.columnIndex="1" prefHeight="60" />
                            </GridPane>
                        </VBox>
                    </VBox>
                </VBox>

                <Label fx:id="lblMensajeError" text="Por favor, complete todos los campos obligatorios."
                       style="-fx-text-fill: red; -fx-font-size: 12px;" visible="false" wrapText="true" />
            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 15px; -fx-background-color: white; -fx-border-color: #e9ecef; -fx-border-width: 1 0 0 0;">
            <Button text="Cancelar" onAction="#cancelarOperacion"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
            <Button text="Generar Factura" onAction="#generarFactura"
                    style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>
            <Button text="Confirmar Pago" onAction="#confirmarPago"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </bottom>

</BorderPane>